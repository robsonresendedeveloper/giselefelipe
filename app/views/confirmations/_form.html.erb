<%= form_with(model: confirmation, local: true) do |form| %>
  <% if confirmation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(confirmation.errors.count, "error") %> prohibited this confirmation from being saved:</h2>

      <ul>
      <% confirmation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Digite seu nome completo:</label><br>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="field">
    <label>Digite a quantidade de pessoas que vão ao casamento <br><br>(incluindo você):</label><br>
    <%= form.number_field :quantity %>
  </div>
  <br>
  <div class="field">
    <label>Digite o seu telefone <br><br>(se você quiser, é claro):</label><br>
    <%= form.text_field :phone %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit "Confirmar presença", id: "btn-submit" %>
  </div>
<% end %>
